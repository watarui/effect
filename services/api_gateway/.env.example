# API Gateway Environment Variables

# Service Configuration
SERVICE_PORT=8080
SERVICE_NAME=api-gateway

# GraphQL Configuration
GRAPHQL_PATH=/graphql
GRAPHQL_PLAYGROUND=true

# Service URLs
USER_SERVICE_URL=http://localhost:50051
VOCABULARY_SERVICE_URL=http://localhost:50052
LEARNING_SERVICE_URL=http://localhost:50053
ALGORITHM_SERVICE_URL=http://localhost:50054
AI_SERVICE_URL=http://localhost:50055
PROGRESS_SERVICE_URL=http://localhost:50056

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-jwt-secret-here
AUTH_ENABLED=false

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
RUST_LOG=api_gateway=debug,async_graphql=debug,tower_http=debug

# Environment
ENVIRONMENT=development